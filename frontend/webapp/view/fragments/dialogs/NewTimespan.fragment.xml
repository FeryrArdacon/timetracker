<core:FragmentDefinition
	xmlns:core="sap.ui.core"
	xmlns="sap.m"
>
	<Dialog title="{i18n>dialog.newtimespan.title}">
		<VBox>
			<Input
				placeholder="{i18n>dialog.newtimespan.description}"
				value="{NewTimespanDialogVM>/description}"
			/>
		</VBox>
		<beginButton>
			<Button
				type="Reject"
				text="{i18n>action.cancel}"
				press="onCancelNewTimespanDialog"
			/>
		</beginButton>
		<endButton>
			<Button
				type="Accept"
				text="{i18n>action.ok}"
				press="onAcceptNewTimespanDialog"
			/>
		</endButton>
	</Dialog>
</core:FragmentDefinition>